// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  categories    Category[]
  transactions  Transaction[]
  settlements   Settlement[] @relation("SettlementInitiator")
  
  // Partner linking - user can send or receive invites
  sentInvites     PartnerLink[] @relation("InviteSender")
  receivedInvites PartnerLink[] @relation("InviteReceiver")
  
  // Track active partner
  activePartnerId String? @unique
  activePartner   PartnerLink? @relation("ActivePartner", fields: [activePartnerId], references: [id])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  userId    String
  createdAt DateTime @default(now())
  
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  image         String?
  transactions Transaction[]
  
  @@unique([userId, name])
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Float
  description String
  date        DateTime
  categoryId  String
  userId      String
  createdAt   DateTime @default(now())
  
  // Couple mode fields
  isShared    Boolean  @default(false)
  paidBy      String?  // userId of who paid, or "split" for 50/50
  settlementId String?
  
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  settlement Settlement? @relation(fields: [settlementId], references: [id], onDelete: SetNull)
  
  @@index([userId, date])
  @@index([userId, isShared])
  @@index([settlementId])
}

model PartnerLink {
  id         String   @id @default(cuid())
  user1Id    String
  user2Id    String
  status     String   @default("pending") // pending, accepted, rejected
  invitedBy  String
  createdAt  DateTime @default(now())
  acceptedAt DateTime?
  
  user1       User @relation("InviteSender", fields: [user1Id], references: [id], onDelete: Cascade)
  user2       User @relation("InviteReceiver", fields: [user2Id], references: [id], onDelete: Cascade)
  
  // Active partner tracking
  activeFor User? @relation("ActivePartner")
  settlements Settlement[]
  
  @@unique([user1Id, user2Id])
}

model Settlement {
  id              String   @id @default(cuid())
  partnerLinkId   String
  settledById     String
  balanceSnapshot Float
  createdAt       DateTime @default(now())

  partnerLink PartnerLink @relation(fields: [partnerLinkId], references: [id], onDelete: Cascade)
  settledBy   User        @relation("SettlementInitiator", fields: [settledById], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([partnerLinkId])
  @@index([settledById])
}
